{
  "globals": {
    "cy" : true,
    "it": true,
    "describe": true,
    "context": true,
    "beforeEach": true,
    "before": true,
    "Cypress": true,
    "window": true
  },
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "max-len": ["error", { "code": 120 }],
    "require-jsdoc" : 0,
    "new-cap" : 0
  }
}
